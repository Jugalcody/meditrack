<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98A9BD"
    tools:context=".aboutUsFragment">

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="About Us"
     android:textSize="30sp"
     android:textAlignment="center"
     android:textColor="@color/black"
     android:layout_marginTop="45dp"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:text="Our platform facilitates online consultations between patients and doctors, enabling advice and prescriptions remotely.
         \n Users can also search for medications and locate nearby pharmacies. Additionally, we offer fitness, exercise, and diet related information within the app.Developed using Android Studio and Java, with MongoDB backend."
        android:gravity="center"
        android:textStyle="normal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="25sp"
        android:textColor="@color/purple"/>

</FrameLayout>