<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="#F8E8E8"
    app:cardElevation="8dp"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:contentDescription="image"
        android:id="@+id/medic_image"
        android:scaleType="centerCrop"
        android:src="@drawable/tabletimg"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medicine_name"
        android:text="GAS tablet"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:layout_marginStart="138dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:text="Simethicone (Gas-X, Mylanta Gas Minis, others)"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginStart="138dp"
        />
    <androidx.appcompat.widget.AppCompatRatingBar
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_one"
        android:rating="4.5"
        android:progressTint="@color/black"
        android:maxHeight="23dp"
        android:layout_marginTop="65dp"
        android:layout_marginStart="140dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rpice"
        android:text="40% off â‚¹453"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="90dp"
        android:layout_marginStart="135dp"
        />
    
</RelativeLayout>
</androidx.cardview.widget.CardView>