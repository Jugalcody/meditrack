<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/transparentColor"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="#f5f5f5"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
    <ImageView
        android:layout_width="40dp"
        android:src="@drawable/baseline_heart_broken_24"
        android:layout_marginStart="360dp"
        android:layout_marginTop="4dp"
        android:id="@+id/critical_patient_page_doctor"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        android:layout_height="40dp"/>
        <com.google.android.material.imageview.ShapeableImageView

            android:layout_width="110dp"
            android:id="@+id/dp_patient_page_doctor"
            android:layout_height="110dp"
            android:padding="9dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:shapeAppearanceOverlay="@style/roundedImageview"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/dp_patient_page_doctor"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/itemtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:text="Dr.Rikesh Yadav"
                android:textSize="22dp" />


                <TextView
                    android:id="@+id/itemtext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/gugi"
                    android:textColor="@color/black"
                    android:padding="1dp"
                    android:layout_marginTop="1dp"
                    android:text="Eye Specialist"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/itemtext3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/gugi"
                    android:textColor="@color/black"
                    android:padding="1dp"
                    android:text="Trims"
                    android:layout_marginTop="2dp"
                    android:textSize="18dp" />

        </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>