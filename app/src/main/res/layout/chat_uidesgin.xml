<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chatdt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/hint3"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="16/05/2024" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/chatdesginoppll"
    android:layout_alignParentStart="true"
    android:layout_below="@id/chatdt1"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:padding="7dp"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/chatdesginopp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Hey how are you"
        android:textColor="@color/black"
        android:textSize="17sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06:45"
        android:id="@+id/chattime1"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        android:textColor="#7E7D7D"
        android:textSize="13sp"
        />
</LinearLayout>

    <TextView
        android:id="@+id/chatdt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatdesginoppll"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textColor="@color/hint3"
        android:textSize="15sp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="16/05/2024" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/chatdt2"
    android:layout_alignParentEnd="true"
    android:orientation="vertical"
    android:id="@+id/chatdesginoppll2"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"

    android:padding="7dp"
    android:background="#C4EAB6"
    >
    <TextView
        android:id="@+id/chatdesginme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Hey how are you"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06:45"
        android:id="@+id/chattime2"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        android:textColor="#7E7D7D"
        android:textSize="13sp"
        />
</LinearLayout>
</RelativeLayout>