<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDEE8"
    tools:context=".DescMedicine">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Toolbar
            android:layout_width="match_parent"
            android:background="#8DB4E6"
            android:title="Details"
            android:titleMarginStart="180dp"
            android:layout_height="55dp"/>
        <ImageView
            android:id="@+id/workiMedicine"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tabletimg" />
        <LinearLayout
            android:id="@+id/linearl"
            android:layout_width="match_parent"
            android:layout_below="@id/workiMedicine"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paracetamol"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/medextrasecmname"
                android:layout_margin="2dp"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desription"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:textSize="20sp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="weight:2gm"
                android:textColor="@color/black"
                android:id="@+id/medextrasecmdesc"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Review Rate"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:textSize="20sp"
                android:padding="5dp"
                />
            <androidx.appcompat.widget.AppCompatRatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="4.5"
                android:progressTint="@color/black"
                android:minHeight="20dp"
                android:maxHeight="230dp"
                android:id="@+id/medextrasecmrating"
                android:layout_margin="8dp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:id="@+id/medextrasecmprice"
                android:layout_margin="3dp"
                android:text="10% $450"/>
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearl"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:padding="6dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#DD7979"
            android:id="@+id/locaation1"
            android:background="@drawable/search_box"
            android:layout_marginBottom="10dp"
            android:text="nearest location"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/addd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locaation1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="4dp"
            android:text="near nerist,Nirjuli or naharlagun"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/medextrasecmorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearl"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/search_box"
            android:backgroundTint="#DD7979"
            android:padding="6dp"
            android:text="order"
            android:textSize="20sp" />
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_below="@id/addd"
            android:layout_height="200dp"
            app:iss_auto_cycle="true"
            app:iss_period="1000"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="20dp"
            app:iss_delay="1000"
            app:iss_text_align="CENTER"/>

    </RelativeLayout>
</ScrollView>