<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparentColor"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="#f5f5f5"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
<ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_margin="10dp"
    android:src="@drawable/delete"
    android:layout_alignParentEnd="true"
    android:id="@+id/docrecdel"/>

            <com.google.android.material.imageview.ShapeableImageView
android:layout_below="@id/docrecdel"
                android:layout_width="110dp"
                android:id="@+id/dp_patient_page_doctor"
                android:layout_height="110dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:shapeAppearanceOverlay="@style/roundedImageview"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/docrecdel"
                android:layout_toRightOf="@id/dp_patient_page_doctor"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/homerecpat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:fontFamily="@font/gugi"
                    android:text="Dr.Rikesh Yadav"
                    android:textSize="22dp" />


                <TextView
                    android:id="@+id/homerecdob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:padding="1dp"
                    android:layout_marginTop="1dp"
                    android:text="Eye Specialist"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/homerecgen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:padding="1dp"
                    android:layout_marginTop="1dp"
                    android:text="MBB"
                    android:textSize="16dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:background="@color/white"
                        android:foregroundTint="@color/red"
                        android:src="@drawable/hospital2"
                        />
                    <TextView
                        android:id="@+id/dhospital_patient_homepage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/black"
                        android:padding="1dp"
                        android:text="Trims"
                        android:layout_marginTop="4dp"
                        android:textSize="18dp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>



