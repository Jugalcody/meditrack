<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparentColor"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="12dp"
        android:elevation="5dp"
       app:cardBackgroundColor="#F1F3F4"
        android:padding="5dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/problem"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/problemtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Diagnosis : "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="23sp"
        />
    <TextView
        android:id="@+id/problemvalue"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Cancer"

        android:textColor="@color/black"
        android:textSize="23sp"
        />
</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:id="@+id/time1"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/problem"
            android:layout_marginStart="14dp"
            android:text="Treatment Started On"
            android:textColor="@color/hint"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/time1"
            android:layout_below="@id/problem"
            android:id="@+id/year"
            android:text="23-jun-2024"
            android:textColor="@color/black"
            android:textSize="17sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/time2"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/year"
        android:layout_marginStart="14dp"
        android:text="Last Visited"
        android:textColor="@color/red"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/time2"
        android:layout_below="@id/year"
        android:id="@+id/year2"
        android:text="23-jun-2024"
        android:textColor="@color/black"
        android:textSize="17sp" />

</RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>