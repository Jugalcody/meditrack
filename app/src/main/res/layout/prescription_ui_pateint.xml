<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#75B2F8"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp"
        android:elevation="5dp"
       app:cardBackgroundColor="#EFF3F2"
        android:padding="9dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Cancer"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:id="@+id/time1"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/problem"
            android:layout_marginStart="10dp"
            android:text="Last Visited"
            android:textColor="@color/hint"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/time1"
            android:layout_below="@id/problem"
            android:id="@+id/year"
            android:text="23-jun-2024"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/problem"
            android:text="on going"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:id="@+id/doctor1"
            android:textColor="#2C7730"
            android:textSize="15sp" />


</RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>