<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_marginBottom="2dp"
    android:minHeight="120dp"
    android:elevation="1dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dp_doctor_searchdesign"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:padding="10dp"
        android:src="@drawable/doctor_male" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/maincontent_doctor_search_design"
        android:layout_toRightOf="@id/dp_doctor_searchdesign"
        android:layout_marginStart="1dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Rikesh Yadav"
            android:id="@+id/name_doctor_searchdesign"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guwahati,Assam"
            android:id="@+id/address_doctor_searchdesign"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_location_on_24"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardiologist"
            android:id="@+id/speciality_doctor_searchdesign"
            android:textColor="@color/black"
            android:textSize="15sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MBBS"
            android:layout_marginTop="0.7dp"
            android:id="@+id/qualification_doctor_searchdesign"
            android:textColor="@color/black"
            android:textSize="15.6sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:id="@+id/review_doctor_searchdesign"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/dp_doctor_searchdesign"
        android:layout_below="@id/maincontent_doctor_search_design">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="4.3"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="25sp"
    android:fontFamily="@font/gugi"
    />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:scaleY="1"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:isIndicator="true"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:rating="3.4"
            android:theme="@style/RatingBar"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(145 votes)"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        >

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Call Doctor"
        android:src="@drawable/baseline_call_24"
        android:textColor="#F4F2F2"
        android:backgroundTint="@color/green_button"
        android:background="@drawable/orange_button"
        android:layout_marginEnd="10dp"
        android:id="@+id/contact_doctor_searchdesign"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:padding="10dp"

        />
    </LinearLayout>



</RelativeLayout>