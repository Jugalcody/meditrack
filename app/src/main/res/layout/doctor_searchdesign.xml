    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dp_doctor_searchdesign"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="#EBECED"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_person_24"
        app:shapeAppearanceOverlay="@style/roundedImageview"
        app:strokeColor="@color/black"
        app:strokeWidth="1.5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/maincontent_doctor_search_design"
        android:layout_toRightOf="@id/dp_doctor_searchdesign"
        android:layout_marginStart="1dp"
        android:layout_toLeftOf="@id/contact_doctor_searchdesign"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Rikesh Yadav"
            android:id="@+id/name_doctor_searchdesign"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guwahati,Assam"
            android:id="@+id/address_doctor_searchdesign"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_location_on_24"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardiologist"
            android:id="@+id/speciality_doctor_searchdesign"
            android:textColor="@color/black"
            android:textSize="15sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MBBS"
            android:layout_marginTop="0.7dp"
            android:id="@+id/qualification_doctor_searchdesign"
            android:textColor="@color/black"
            android:textSize="15.6sp"

            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:text="Call Doctor"
        android:src="@drawable/baseline_call_24"
        android:textColor="#F4F2F2"
        android:backgroundTint="@color/green_button"
        android:background="@drawable/orange_button"
        android:layout_marginEnd="10dp"
        android:id="@+id/contact_doctor_searchdesign"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
   />



</RelativeLayout>