<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="48dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".patient_edit_profile">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/backgroundpatient"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/prof_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/blue"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.306"
            app:shapeAppearanceOverlay="@style/roundedImageview"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prof_image">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="3dp"
                android:id="@+id/patient_profile_name"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#040303"
                android:textSize="22sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tl"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="268dp"
        android:background="#FBFBFB">

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_margin="10dp"
              android:elevation="5dp"
              app:cardBackgroundColor="@color/white"
              app:cardElevation="5dp"
              app:cardCornerRadius="5dp"
              android:id="@+id/card1_profile"
              android:layout_height="wrap_content"
              >
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/edit_profile_patient_icon"
                  android:src="@drawable/editicon"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="11dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="5dp"
                 />

              <ScrollView
                  android:layout_width="match_parent"
                  android:id="@+id/patient_scroll1_profile"
                  android:layout_below="@id/edit_profile_patient_icon"
                  android:layout_height="wrap_content">
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_margin="10dp"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="State"
                          android:textSize="18sp"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_statetitle"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=""
                          android:visibility="gone"
                          android:textSize="18sp"
                          android:layout_alignParentEnd="true"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_stateValue"/>
                      <ProgressBar
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:text=""
                          android:layout_marginTop="2dp"
                          android:layout_alignParentEnd="true"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_p1"/>

                      <View
                          android:layout_below="@id/patient_profile_statetitle"
                          android:layout_width="wrap_content"
                          android:id="@+id/hr"
                          android:layout_marginTop="8dp"
                          android:background="#CAC7C7"
                          android:layout_marginStart="8dp"
                          android:layout_marginEnd="8dp"
                          android:layout_height="1dp"
                          android:layout_marginBottom="8dp"
                          />


                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="City"
                          android:textSize="18sp"
                          android:layout_below="@id/hr"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_citytitle"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=""
                          android:textSize="18sp"
                          android:layout_below="@id/hr"
                          android:layout_alignParentEnd="true"
                          android:visibility="gone"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_cityValue"/>
                      <ProgressBar
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:text=""
                          android:layout_marginTop="2dp"
                          android:layout_alignParentEnd="true"
                          android:layout_below="@id/hr"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_p2"/>
                      <View
                          android:layout_below="@id/patient_profile_citytitle"
                          android:layout_width="wrap_content"
                          android:id="@+id/hr2"
                          android:layout_marginTop="8dp"
                          android:background="#CAC7C7"
                          android:layout_marginStart="8dp"
                          android:layout_marginEnd="8dp"
                          android:layout_height="1dp"
                          android:layout_marginBottom="8dp"
                          />


                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Phone"
                          android:textSize="18sp"
                          android:layout_below="@id/hr2"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_phonetitle"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=""
                          android:visibility="gone"
                          android:textSize="18sp"
                          android:layout_below="@id/hr2"
                          android:layout_alignParentEnd="true"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_phoneValue"/>
                      <ProgressBar
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:text=""
                          android:layout_marginTop="2dp"
                          android:layout_alignParentEnd="true"
                          android:layout_below="@id/hr2"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_p3"/>
                      <View
                          android:layout_below="@id/patient_profile_phonetitle"
                          android:layout_width="wrap_content"
                          android:id="@+id/hr3"
                          android:layout_marginTop="8dp"
                          android:background="#CAC7C7"
                          android:layout_marginStart="8dp"
                          android:layout_marginEnd="8dp"
                          android:layout_height="1dp"
                          android:layout_marginBottom="8dp"
                          />



                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Email"
                          android:textSize="18sp"
                          android:layout_below="@id/hr3"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_emailtitle"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=""
                          android:visibility="gone"
                          android:textSize="18sp"
                          android:layout_below="@id/hr3"
                          android:layout_alignParentEnd="true"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_emailValue"/>
                      <ProgressBar
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:text=""
                          android:layout_marginTop="2dp"
                          android:layout_alignParentEnd="true"
                          android:layout_below="@id/hr3"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_p4"/>
                      <View
                          android:layout_below="@id/patient_profile_emailtitle"
                          android:layout_width="wrap_content"
                          android:id="@+id/hr4"
                          android:layout_marginTop="8dp"
                          android:background="#CAC7C7"
                          android:layout_marginStart="8dp"
                          android:layout_marginEnd="8dp"
                          android:layout_height="1dp"
                          android:layout_marginBottom="8dp"
                          />



                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Gender"
                          android:textSize="18sp"
                          android:layout_below="@id/hr4"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_gendertitle"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=""
                          android:textSize="18sp"
                          android:layout_below="@id/hr4"
                          android:layout_alignParentEnd="true"
                          android:visibility="gone"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_genderValue"/>
                      <ProgressBar
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:text=""
                          android:layout_marginTop="2dp"
                          android:layout_alignParentEnd="true"
                          android:layout_below="@id/hr4"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_p5"/>
                      <View
                          android:layout_below="@id/patient_profile_gendertitle"
                          android:layout_width="wrap_content"
                          android:id="@+id/hr5"
                          android:layout_marginTop="8dp"
                          android:background="#CAC7C7"
                          android:layout_marginStart="8dp"
                          android:layout_marginEnd="8dp"
                          android:layout_height="1dp"
                          android:layout_marginBottom="8dp"
                          />


                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="DOB"
                          android:textSize="18sp"
                          android:layout_below="@id/hr5"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_dobtitle"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=""
                          android:textSize="18sp"
                          android:layout_below="@id/hr5"
                          android:layout_alignParentEnd="true"
                          android:visibility="gone"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_dobValue"/>
                      <ProgressBar
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:text=""
                          android:layout_marginTop="2dp"
                          android:layout_alignParentEnd="true"
                          android:layout_below="@id/hr5"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_p6"/>
                      <View
                          android:layout_below="@id/patient_profile_dobtitle"
                          android:layout_width="wrap_content"
                          android:id="@+id/hr6"
                          android:layout_marginTop="8dp"
                          android:background="#CAC7C7"
                          android:layout_marginStart="8dp"
                          android:layout_marginEnd="8dp"
                          android:layout_height="1dp"
                          android:layout_marginBottom="8dp"
                          />


                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Age"
                          android:textSize="18sp"
                          android:layout_below="@id/hr6"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_agetitle"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=""
                          android:textSize="18sp"
                          android:layout_below="@id/hr6"
                          android:layout_alignParentEnd="true"
                          android:visibility="gone"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_ageValue"/>
                      <ProgressBar
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:text=""
                          android:layout_marginTop="2dp"
                          android:layout_alignParentEnd="true"
                          android:layout_below="@id/hr6"
                          android:textColor="@color/black"
                          android:id="@+id/patient_profile_p7"/>
                      <View
                          android:layout_below="@id/patient_profile_agetitle"
                          android:layout_width="wrap_content"
                          android:id="@+id/hr7"
                          android:layout_marginTop="8dp"
                          android:background="#CAC7C7"
                          android:layout_marginStart="8dp"
                          android:layout_marginEnd="8dp"
                          android:layout_height="1dp"
                          android:layout_marginBottom="8dp"
                          />




                  </RelativeLayout>
              </ScrollView>

              </RelativeLayout>
          </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>