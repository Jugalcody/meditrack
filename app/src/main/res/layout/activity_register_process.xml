<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Register_process">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your account will be created after verifying the uploaded document"

        android:id="@+id/process_reg"
        android:layout_marginStart="3dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_register"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="11dp"
        android:textColorHint="@color/hint"
        android:textSize="14sp"
        android:fontFamily="@font/gugi"
        android:layout_marginBottom="0dp"
        android:textColor="@color/red"
        />

</RelativeLayout>