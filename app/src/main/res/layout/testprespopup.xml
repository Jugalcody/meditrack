<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Test Details"
        android:id="@+id/prestestpopuptitle"
        android:fontFamily="@font/gugi"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/cross2"
        android:layout_alignParentEnd="true"
        android:id="@+id/poptestcross"/>
    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Test Name"
        android:layout_below="@id/prestestpopuptitle"
        android:padding="15dp"
        android:textColorHint="@color/hint2"
        android:background="@drawable/rectangle_box"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:id="@+id/testdesgin_testname"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/testdesgin_testname"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:id="@+id/testdesignpopview"
       />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/testdesgin_addtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testdesignpopview"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/green_button"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/testdesgin_deletetest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testdesignpopview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/green_button"
        android:backgroundTint="@color/red_pulse"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>
</androidx.cardview.widget.CardView>