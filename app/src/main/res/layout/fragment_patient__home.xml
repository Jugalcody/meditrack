<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Patient_HomeFragment">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:fitsSystemWindows="true"
        android:id="@+id/customtool"
        android:background="#2583EF" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:layout_marginStart="50dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="200dp"
                    android:hint="search"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:background="#ffffffff"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingStart="4dp"
                    android:backgroundTint="@color/hint"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/baseline_search_24"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashdesign"
        android:layout_marginTop="135dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:id="@+id/horizontal"
            android:layout_marginTop="0dp"
            android:background="@drawable/dashdesign"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="152dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#9F4427"
                    android:foreground="@drawable/effect"
                    android:clickable="true"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="112dp"
                            android:layout_height="101dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/diet"
                            app:shapeAppearanceOverlay="@style/createcircle"
                            app:strokeColor="@color/black"
                            app:strokeWidth="0.5dp" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="9dp"
                            android:fontFamily="@font/gugi"
                            android:paddingStart="34dp"
                            android:text="Diet"
                            android:textColor="@color/blue"
                            android:textSize="25sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="152dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="4dp"
                    android:foreground="@drawable/effect"
                    android:clickable="true"
                    app:cardBackgroundColor="#E36138"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="129dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="112dp"
                            android:layout_height="101dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exercise"
                            app:shapeAppearanceOverlay="@style/createcircle"
                            app:strokeColor="@color/black"
                            app:strokeWidth="0.5dp" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="9dp"
                            android:fontFamily="@font/gugi"
                            android:paddingStart="3dp"
                            android:text="Exercise"
                            android:textColor="#191B1C"
                            android:textSize="25sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="152dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="5dp"
                    android:foreground="@drawable/effect"
                    android:clickable="true"
                    app:cardBackgroundColor="#2F978A"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="129dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="112dp"
                            android:layout_height="101dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/reportr"
                            app:shapeAppearanceOverlay="@style/createcircle"
                            app:strokeColor="@color/black"
                            app:strokeWidth="0.5dp" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="9dp"
                            android:fontFamily="@font/gugi"
                            android:paddingStart="13dp"
                            android:text="Report"
                            android:textColor="@color/red"
                            android:textSize="25sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="152dp"
                    app:cardCornerRadius="20dp"
                    android:foreground="@drawable/effect"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#9F4427"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="129dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="112dp"
                            android:layout_height="101dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/medicine"
                            app:shapeAppearanceOverlay="@style/createcircle"
                            app:strokeColor="@color/black"
                            app:strokeWidth="0.5dp" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="9dp"
                            android:fontFamily="@font/gugi"
                            android:paddingStart="3dp"
                            android:text="Medicine"
                            android:textColor="#0E1B75"
                            android:textSize="25sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </HorizontalScrollView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/horizontal"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/patient_recyclview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>